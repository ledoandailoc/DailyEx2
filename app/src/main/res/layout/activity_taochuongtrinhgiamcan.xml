<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ledoa.dailyexsuper.activity.TaoChuongTrinhGiamCanActivity"
    android:background="#ee5911">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_top_step" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cân nặng hiện tại (kg)"
            android:id="@+id/textView12"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_cannanghientai"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cân nặng mục tiêu (kg)"
            android:id="@+id/textView13"
            android:layout_below="@+id/txt_cannanghientai"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_cannangmuctieu"
            android:layout_below="@+id/textView13"
            android:layout_alignLeft="@+id/txt_cannanghientai"
            android:layout_alignStart="@+id/txt_cannanghientai"
            android:layout_alignRight="@+id/txt_cannanghientai"
            android:layout_alignEnd="@+id/txt_cannanghientai" />

        <TextView
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lựa chọn môn tập"
            android:id="@+id/textView23"
            android:layout_below="@+id/txt_cannangmuctieu"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/button_border_normal"
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tiếp Tục"
        android:textSize="20dp"
        android:textColor="#fff"
        android:id="@+id/btn_tieptuc"
        android:layout_below="@+id/checkBox4"
        android:layout_alignRight="@+id/textView18"
        android:layout_alignEnd="@+id/textView18" />

    <TextView
        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập vào những thông số cần thiết"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chương trình sẽ tính ra chương trình tập luyện"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phù hợp với bạn"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập thông số"
        android:id="@+id/textView18"
        android:layout_below="@+id/actionbar"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đi bộ"
        android:id="@+id/checkBox"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chạy bộ"
        android:id="@+id/checkBox3"
        android:checked="false"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đi bộ + Hít đất"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:layout_below="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chạy bộ + Hít đất"
        android:id="@+id/checkBox4"
        android:checked="false"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

</RelativeLayout>
