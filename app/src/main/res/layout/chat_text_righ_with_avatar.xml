<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvSms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_avatar_myself"
        android:layout_centerVertical="true"
        android:layout_marginRight="-10dp"
        android:layout_toLeftOf="@id/iv_avatar_myself"
        android:layout_toStartOf="@id/iv_avatar_myself"
        android:layout_marginLeft="45dp"
        android:gravity="right"
        android:paddingLeft="10dp"
        android:paddingRight="25dp"
        android:text="Medium" />

    <com.horical.siyaplaceandroid.customview.HexagonImageView2
        android:id="@+id/iv_avatar_myself"
        android:layout_width="@dimen/chat_fragment_avatar_size"
        android:layout_height="@dimen/chat_fragment_avatar_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:src="@drawable/avt" />
</RelativeLayout>