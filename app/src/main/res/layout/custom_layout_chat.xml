<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/AvartarChat1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        
        android:layout_marginTop="14dp"
        android:src="@drawable/icon_tab3_banbe" />

    <TextView
        android:id="@+id/textViewChat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/AvartarChat1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/AvartarChat1"
        android:text="Ngủ chưa vậy?" />

    <ImageView
        android:id="@+id/avartarChat2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/AvartarChat1"
        
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/textViewChat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avartarChat2"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/avartarChat2"
        android:text="Vẫn chưa ngủ đâu mà:D" />

</RelativeLayout>