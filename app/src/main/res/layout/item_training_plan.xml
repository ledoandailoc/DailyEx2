<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/rl_tranning"

    >


    <ImageView
        android:layout_margin="10dp"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:id="@+id/imageView_training"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/training_walk"/>

    <RelativeLayout
        android:background="#66000000"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageView_training"
        android:layout_alignLeft="@+id/imageView_training"
        android:layout_alignStart="@+id/imageView_training"
        android:layout_alignRight="@+id/imageView_training"
        android:layout_alignEnd="@+id/imageView_training"
       >


        <Button
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Đi Bộ"
            android:id="@+id/button_training"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</RelativeLayout>
