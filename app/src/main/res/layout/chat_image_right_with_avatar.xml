<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_picture_myself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_avatar_myself"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="-10dp"
        android:layout_toLeftOf="@id/iv_avatar_myself"
        android:layout_toStartOf="@id/iv_avatar_myself"
        android:gravity="right"
        android:adjustViewBounds="true"/>

    <com.horical.siyaplaceandroid.customview.HexagonImageView2
        android:id="@+id/iv_avatar_myself"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:src="@drawable/avt" />
</RelativeLayout>