<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ledoa.dailyexsuper.activity.TaoChuongTrinhGiamCanActivity"
    android:background="#ee5911">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_top_step" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:id="@+id/linearLayout5">

        <Button
            android:layout_marginRight="10dp"
            android:background="@drawable/button_border_normal"
            android:textAllCaps="false"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Huỷ bỏ"
            android:textSize="15dp"
            android:textColor="#fff"
            android:id="@+id/btn_huybo"
            android:layout_alignTop="@+id/txt_cannanghientai"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_border_normal"
            android:textAllCaps="false"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Tạo chương trình"
            android:textSize="15dp"
            android:textColor="#fff"
            android:id="@+id/btn_taochuongtrinh"
            android:layout_alignTop="@+id/txt_cannanghientai"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <TextView
        android:padding="20dp"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--> Đi bộ mỗi ngày 1 giờ trong vòng 56 ngày"
        android:id="@+id/tv_chuongtrinhtap"
        android:layout_below="@+id/tv_tongthoigiandexuat"
        android:layout_alignLeft="@+id/linearLayout5"
        android:layout_alignStart="@+id/linearLayout5" />

    <TextView
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chương trình tập đề xuất"
        android:id="@+id/textView15"
        android:layout_below="@+id/actionbar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:padding="20dp"
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số cân nặng cần cắt giảm:"
        android:id="@+id/tv_cannangcatgiam"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/tv_chuongtrinhtap"
        android:layout_alignStart="@+id/tv_chuongtrinhtap" />

    <TextView
        android:padding="20dp"
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng calo cần cắt giảm:"
        android:id="@+id/tv_tongcalocatgiam"
        android:layout_below="@+id/tv_cannangcatgiam"
        android:layout_alignLeft="@+id/tv_cannangcatgiam"
        android:layout_alignStart="@+id/tv_cannangcatgiam" />

    <TextView
        android:padding="20dp"
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng thời gian đề xuất:"
        android:id="@+id/tv_tongthoigiandexuat"
        android:layout_below="@+id/tv_calo1h"
        android:layout_alignLeft="@+id/tv_chuongtrinhtap"
        android:layout_alignStart="@+id/tv_chuongtrinhtap" />

    <TextView
        android:padding="20dp"
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng calo tiêu hao trong 1h đi bộ:"
        android:id="@+id/tv_calo1h"
        android:layout_below="@+id/tv_tongcalocatgiam"
        android:layout_alignLeft="@+id/tv_tongthoigiandexuat"
        android:layout_alignStart="@+id/tv_tongthoigiandexuat" />

</RelativeLayout>
